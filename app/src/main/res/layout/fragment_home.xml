<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:elevation="10dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/nav_map"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:padding="20dp"
            android:background="@color/colorPrimary"
            android:text="maps"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:drawableLeft="@drawable/ic_map"
            android:drawablePadding="20dp"
            />

        <Button
            android:id="@+id/nav_line"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:padding="20dp"
            android:background="@android:color/darker_gray"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:drawableLeft="@drawable/ic_line"
            android:drawablePadding="20dp"
            android:layout_toRightOf="@id/nav_map" />
    </LinearLayout>


        <LinearLayout
            android:elevation="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



            <Button
                android:drawableTop="@drawable/ic_undo_black_24dp"
                android:id="@+id/prev"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@id/next"
                android:layout_margin="5dp"
                android:background="@color/red"
                android:text="reculler"
                android:textColor="@color/white"
                android:textSize="20dp" />
            <Button
                android:drawableTop="@drawable/ic_redo_black_24dp"
                android:id="@+id/next"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary2"
                android:text="Avancer"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/line_layout">
       <LinearLayout
           android:orientation="vertical"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerInParent="true"
           android:translationY="-80dp"
           >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="100dp"
               android:text="La Line : "
               android:textColor="@color/white"
               android:textSize="40dp"
               android:textStyle="bold"
               android:gravity="center"
               android:layout_gravity="center"
               android:layout_centerInParent="true" />
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start"
                   android:id="@+id/start"
                    android:textColor="@color/white"
                    android:textSize="40dp"
                    android:textStyle="bold"
                    android:gravity="center"
                   android:drawableLeft="@drawable/ic_directions_bus_black_24dp"
                   android:drawablePadding="20dp"
                   android:layout_margin="20dp"
                   android:layout_centerInParent="true" />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:layout_margin="20dp"
                   android:drawableLeft="@drawable/ic_redo_black_24dp"

                   android:drawableTint="@color/green_light"
                   android:drawablePadding="0dp"

                   android:layout_centerInParent="true" />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="End"
                   android:textColor="@color/white"
                   android:textSize="40dp"
                   android:textStyle="bold"
                   android:gravity="center"
                   android:id="@+id/target"
                   android:layout_margin="20dp"
                   android:drawableLeft="@drawable/ic_assistant_photo_black_24dp"
                   android:drawablePadding="20dp"
                   android:layout_centerInParent="true" />
           </LinearLayout>
       </LinearLayout>
        <params.com.stepview.StatusViewScroller
            android:id="@+id/status_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingTop="30dp"
            android:paddingBottom="40dp"
            android:layout_margin="30dp"
            app:alignStatusWithCurrent="true"
            app:currentDrawable="@drawable/ic_directions_bus_black_24dp"
            app:circleColor="@color/red"
            app:circleColorCurrent="@color/green_light"
            app:circleColorIncomplete="@color/white"
            app:circleColorType="fillStroke"
            app:circleStrokeColor="@color/white"
            app:completeDrawable="@drawable/ic_check_white"
            app:currentCount="1"
            app:circleStrokeWidth="5dp"
            app:currentStepZoom="1.6"
            app:drawLabels="false"
            app:lineColor="@color/red"
            app:lineColorCurrent="#7AF44336"
            app:lineColorIncomplete="#B7B4B7BA"
            app:lineGap="5dp"
            app:lineWidth="15dp"
            app:statusTopMargin="30dp"
            app:textColorLabels="@android:color/white"
            app:textColorLabelsCurrent="@android:color/white"
            app:textColorStatus="@color/white"
            app:textSizeStatus="25dp" />
    </RelativeLayout>
    <RelativeLayout android:id="@+id/map_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <org.osmdroid.views.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/zoomin"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="15dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/bg_circle"
                android:src="@drawable/ic_zoom_in_black_24dp"
                />
            <ImageButton
                android:id="@+id/zoomout"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="15dp"
                android:layout_below="@id/zoomin"
                android:background="@drawable/bg_circle"
                android:src="@drawable/ic_zoom_out_black_24dp"
                />
            <ImageButton
                android:id="@+id/goToMyLocalisation"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_margin="15dp"
                android:layout_below="@id/zoomout"
                android:background="@drawable/bg_circle_primary"
                android:src="@drawable/ic_gps_fixed_black_24dp"
                />
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>