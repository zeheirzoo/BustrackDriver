<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorAccent"
    tools:context=".LinePlanFragment">
    <TextView
        android:id="@+id/center2"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="La Line : JBEL ELWAHCH --> NOUVELLE VILLE"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_centerInParent="true" />
    <Button
        android:id="@+id/me"
        android:background="@drawable/bg_circle_dark"
        android:translationY="135dp"
        android:translationX="145dp"
        android:layout_centerVertical="true"
        android:layout_height="90dp"
        android:layout_width="90dp"
        />

    <params.com.stepview.StatusViewScroller
        android:id="@+id/status_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/center2"
        android:layout_centerVertical="true"
        android:entries="@array/status"
        android:padding="30dp"
        app:alignStatusWithCurrent="true"
        app:circleColor="@color/red"
        app:circleColorCurrent="#3F51B5"
        app:circleColorIncomplete="@color/gray"
        app:circleColorType="fillStroke"
        app:circleStrokeColor="@color/white"
        app:completeDrawable="@drawable/ic_check_white"
        app:currentCount="1"
        app:currentStepZoom="0.1"
        app:drawLabels="true"
        app:lineColor="@color/red"
        app:lineColorCurrent="#7AF44336"
        app:lineColorIncomplete="#B7B4B7BA"
        app:lineGap="0dp"
        app:lineWidth="15dp"
        app:minStatusAdjacentMargin="140dp"
        app:statusTopMargin="30dp"
        app:stepCount="50"
        app:textColorLabels="@android:color/white"
        app:textColorLabelsCurrent="@android:color/white"
        app:textColorStatus="@color/white"
        app:textSizeLabels="0sp"
        app:textSizeStatus="35dp" />
</RelativeLayout>