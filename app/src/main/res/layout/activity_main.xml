<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame_content"
        android:layout_above="@id/bottom_layout"
        android:layout_toRightOf="@id/scanner_layout"
        />

    <RelativeLayout
        android:id="@+id/scanner_layout"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_above="@id/bottom_layout"
        >

        <com.budiyev.android.codescanner.CodeScannerView
            android:id="@+id/scanner_view"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            app:autoFocusButtonColor="@color/colorPrimary"
            app:autoFocusButtonVisible="false"
            app:flashButtonColor="@color/colorPrimaryDark2"
            app:flashButtonVisible="false"
            app:frameColor="@color/colorPrimaryDark"
            app:frameCornersSize="80dp"
            app:frameCornersRadius="20dp"
            app:frameAspectRatioWidth="1"
            app:frameAspectRatioHeight="1"
            app:frameSize="0.9"
            app:frameThickness="8dp"
            android:layout_alignParentTop="true"
            android:layout_above="@id/center"
            app:maskColor="#FFFFFF"/>
            <view
                android:id="@+id/center"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_centerInParent="true"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@id/center"
            android:layout_height="match_parent">

            <ImageButton
                android:onClick="onClickItem"
                android:layout_above="@id/center2"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary2"
                />
            <view
                android:id="@+id/center2"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_centerInParent="true"/>
            <ImageButton
                android:onClick="onClickItem"
                android:layout_below="@id/center2"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"

                android:background="@color/red"
                />
        </RelativeLayout>

    </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_alignParentBottom="true"
    android:padding="5dp"
    android:id="@+id/bottom_layout"
    >

    <ImageButton
        android:onClick="onClickItem"
        android:id="@+id/prev"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:background="@color/colorPrimaryDark3"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_arrow_back_black_50dp"

        />
    <ImageButton
        android:onClick="onClickItem"
        android:id="@+id/next"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark3"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_arrow_forward_black_50dp"

        />


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E9FFFFFF"
        android:scrollbars="none"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/scroll_menu"
        android:layout_toRightOf="@id/prev"
        android:layout_toLeftOf="@id/next"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <ImageButton
                android:onClick="onClickItem"

                android:id="@+id/nav_map"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="@color/colorPrimary"
                />

            <ImageButton
                android:id="@+id/nav_alert"
                android:onClick="onClickItem"

                android:layout_width="250dp"
                android:layout_marginRight="10dp"
                android:background="@color/red"
                android:layout_height="match_parent"/>

            <ImageButton
                android:id="@+id/nav_search"
                android:onClick="onClickItem"

                android:layout_width="250dp"
                android:layout_marginRight="10dp"
                android:background="@color/green_light"
                android:layout_height="match_parent"/>

            <ImageButton
                android:id="@+id/nav_settings"
                android:layout_width="250dp"

                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="@color/colorPrimaryDark2"
                android:onClick="onClickItem" />

            <ImageButton
                android:id="@+id/nav_profile"
                android:onClick="onClickItem"

                android:layout_width="250dp"
                android:layout_marginRight="10dp"
                android:background="@color/orange"
                android:layout_height="match_parent"/>
            <ImageButton
                android:id="@+id/nav_help"
                android:onClick="onClickItem"
                android:layout_width="250dp"
                android:layout_marginRight="10dp"
                android:background="@color/move"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </HorizontalScrollView>
</RelativeLayout>

</RelativeLayout>